<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LiveStreetView" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>


    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#15008E</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>




    <!--custom theme-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/mapbox_blue</item>-->
<!--        <item name="colorPrimaryDark">@color/mapbox_blue</item>-->
        <item name="colorAccent">@color/bg</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <style parent="Theme.Design.Light.BottomSheetDialog" name="AppBottomSheetDialogTheme">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
 <style parent="Widget.Design.BottomSheet.Modal" name="AppModalStyle">
    <item name="android:background">@drawable/bg_streetview</item>
    </style>


    <style name="TabButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:background">@drawable/tab_button_selector</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@drawable/tab_button_text_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>


    <!--ads style-->

    <style name="AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">Ad</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">20dp</item>
        <item name="android:height">20dp</item>
    </style>
</resources>