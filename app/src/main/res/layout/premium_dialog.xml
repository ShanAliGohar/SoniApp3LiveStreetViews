<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="400dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/premium_card"
            android:layout_width="330dp"
            android:layout_height="400dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/premium_loti"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:elevation="10dp"
            app:layout_constraintEnd_toEndOf="@+id/premium_card"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="@+id/premium_card"
            app:layout_constraintTop_toTopOf="@+id/premium_card"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/bluecrown" />

        <TextView
            android:id="@+id/heading_txt_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="10dp"
            android:gravity="start"
            android:text="Get Premium Features"
            android:textColor="#C91C1C"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="@+id/premium_card"
            app:layout_constraintStart_toStartOf="@+id/premium_card"
            app:layout_constraintTop_toBottomOf="@+id/premium_loti" />


        <Button
            android:id="@+id/submit_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@color/blue"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/premium_card"
            app:layout_constraintEnd_toEndOf="@+id/textView60"
            app:layout_constraintStart_toStartOf="@+id/textView60"
            app:layout_constraintTop_toBottomOf="@+id/textView60" />

                <TextView
                    android:id="@+id/upgrade_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:text="Upgrade Now"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/submit_btn"
                    app:layout_constraintEnd_toEndOf="@+id/submit_btn"
                    app:layout_constraintStart_toStartOf="@+id/submit_btn"
                    app:layout_constraintTop_toTopOf="@+id/submit_btn" />

        <TextView
            android:id="@+id/textView52"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/tickicon"
            android:drawablePadding="16dp"
            android:elevation="2dp"
            android:fontFamily="@font/mulish"
            android:text="Upgrade to Enjoy Apps Without  Interruptions "
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/heading_txt_premium"
            app:layout_constraintStart_toStartOf="@+id/heading_txt_premium"
            app:layout_constraintTop_toBottomOf="@+id/heading_txt_premium" />

        <TextView
            android:id="@+id/textView55"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/tickicon"
            android:drawablePadding="16dp"
            android:elevation="2dp"
            android:fontFamily="@font/mulish"
            android:text="Ad-free browsing"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/textView52"
            app:layout_constraintStart_toStartOf="@+id/textView52"
            app:layout_constraintTop_toBottomOf="@+id/textView52" />

        <TextView
            android:id="@+id/textView60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/tickicon"
            android:drawablePadding="16dp"
            android:elevation="2dp"
            android:fontFamily="@font/mulish"
            android:text="Your Gateway to distraction -\n free app"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/textView55"
            app:layout_constraintStart_toStartOf="@+id/heading_txt_premium"
            app:layout_constraintTop_toBottomOf="@+id/textView55" />
</androidx.constraintlayout.widget.ConstraintLayout>

